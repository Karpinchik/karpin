import xml.etree.ElementTree as ET
data = ET.parse("newsafr.xml")

root = data.getroot()
# print(root.attrib)

title = root.find("channel/title")
# print(title.attrib)

xml_items = root.findall("channel/item")
# print(xml_items)
for item in xml_items:
  # print(item.attrib["id"])
  news = (item.find("description").text)
  print(news)

